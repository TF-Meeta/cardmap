<div class="card-form-container">
  <h1>アイテム情報を投稿</h1>

  <%= form_with model: @card_post, local: true do |f| %>

    <% if @card_post.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(@card_post.errors.count, "error") %> が発生しました:</h2>
        <ul>
          <% @card_post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :store_name, "店舗名" %>
      <%= f.text_field :store_name, placeholder: "例：駿河屋 博多マルイ店" %>
    </div>

    <div class="form-group">
      <%= f.label :card_name, "アイテム名" %>
      <%= f.text_field :card_name, placeholder: "例：青眼の白龍" %>
    </div>

    <div class="form-group">
      <%= f.label :price, "価格（円）" %>
      <%= f.number_field :price, placeholder: "例：12000", min: 1 %>
    </div>

    <div class="form-group">
      <%= f.label :memo, "メモ（任意）" %>
      <%= f.text_area :memo, rows: 3 %>
    </div>

    <div class="form-group">
      <%= f.label :image, "画像（任意）" %>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <%= f.submit "投稿する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
