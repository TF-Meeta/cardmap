<header class="header">
  <nav class="navbar">
    <%= link_to "PriceMap", root_path, class: "logo" %>

    <div class="nav-links">
      <% if user_signed_in? %>
        <%= link_to "マイページ", user_path(current_user), class: "nav-link" %>

        <!-- ログアウトは button_to に変更 -->
        <%= button_to "ログアウト", destroy_user_session_path,
              method: :delete,
              form: { class: "inline" }, 
              class: "nav-link bg-transparent border-0 p-0 cursor-pointer" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
        <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
      <% end %>
    </div>
  </nav>
</header>

